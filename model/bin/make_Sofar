#!/bin/bash -e
#
# SOFAR Make Script
#

cp comp.Sofar comp
cp link.Sofar link

# --------------------------------------------------------------------------- #
# 3. Compile non-MPI codes                                                    #
# --------------------------------------------------------------------------- #

  cp switch_Sofar switch
  ./w3_make ww3_grid ww3_strt ww3_prep ww3_outf ww3_outp ww3_ounf ww3_ounp

# --------------------------------------------------------------------------- #
# 3. Compile MPI codes                                                        #
# --------------------------------------------------------------------------- #

  cp switch_Sofar_MPI switch
  ./w3_make ww3_shel ww3_multi ww3_sbs1
  
