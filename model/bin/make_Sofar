#!/bin/bash -e
#
# SOFAR Make Script
#

cp comp.Sofar comp
cp link.Sofar link

# --------------------------------------------------------------------------- #
# 3. Compile non-MPI codes                                                    #
# --------------------------------------------------------------------------- #

  cp switch_Sofar switch
  ./w3_make ww3_grid ww3_strt ww3_prep ww3_outf ww3_outp

  mv ../exe/exec_type ../exe/exec_type__SEQ
  cp -r ../exe ../exe__SEQ
  mv ../tmp ../tmp_SEQ

# --------------------------------------------------------------------------- #
# 3. Compile MPI codes                                                        #
# --------------------------------------------------------------------------- #

  cp switch_Sofar_MPI switch
  ./w3_make ww3_shel ww3_multi ww3_sbs1
  
  mv ../exe/exec_type ../exe/exec_type__MPI
  mv ../exe__SEQ/* ../exe
  rm -r ../exe__SEQ
  mv ../tmp ../tmp_MPI
  ln -sf tmp_MPI ../tmp
